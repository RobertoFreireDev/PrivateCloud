@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <MudAlert Severity="Severity.Error" Class="mt-4">
        @errorMessage
    </MudAlert>
}
else
{
    <MudTable Items="@rows" Hover="true" Bordered="true" Striped="true">
        <HeaderContent>
            @foreach (var col in columns)
            {
                <MudTh>@col</MudTh>
            }
        </HeaderContent>
        <RowTemplate>
            @foreach (var col in columns)
            {
                <MudTd DataLabel="@col">@context[col]</MudTd>
            }
        </RowTemplate>
    </MudTable>    
}